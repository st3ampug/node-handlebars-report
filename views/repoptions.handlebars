<!-- =========================== BODY  =========================== -->
<!-- +++++++++++++++++++++++++++ ROWS 1 ++++++++++++++++++++++++++ -->
<div class="row">
    <h4>JIRA Stories</h4>
</div>
<div class="row">
    <div class="twelve columns">
        <table id="storiestable">
            <thead>
                <tr>
                    <th>ISSUETYPE</th>
                    <th>KEY</th>
                    <th>SUMMARY</th>
                    <th>STATUS</th>
                </tr>
            </thead>
            <tbody>
                {{#each context.stories}}
                <tr class="storyrow" id="{{this.key}}">
                    <td><img src="{{this.fields.issuetype.iconUrl}}" style="margin-bottom:-4px" /></td>
                    <td>{{this.key}}</td>
                    <td>{{this.fields.summary}}</td>
                    <td>{{this.fields.status.name}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
<div class="row">
    <div class="myselection">
        <div class="two columns">
            <h5>Selected:</h5>
        </div>
        <div class="ten columns">
            <div id="selectedstories"></div>
        </div>
    </div>
</div>

