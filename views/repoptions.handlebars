<!-- +++++++++++++++++++++++++++ ROW 4 +++++++++++++++++++++++++++ -->

<div class="row">
    <h4>TestRail Plans</h4>
    <hr>
    <div class="twelve columns">
        <ol>
        {{#each context.testplans}}
            <li>{{this.name}}</li>
        {{/each}}
        </ol>
    </div>
</div>

<!-- +++++++++++++++++++++++++++ ROW 5 +++++++++++++++++++++++++++ -->

<div class="row">
    <h4>TestRail Runs</h4>
</div>
<div class="row">
    <div class="twelve columns">
        <table id="testrunstable">
            <thead>
                <tr>
                    <th>NAME</th>
                    <th>PASSED</th>
                    <th>BLOCKED</th>
                    <th>UNTESTED</th>
                    <th>RETEST</th>
                    <th>FAILED</th>
                    <th>RUNS SUM</th>
                </tr>
            </thead>
            <tbody>
                {{#each context.testruns}}
                <tr class="testrunrow" id="{{this.key}}">
                    <td>{{this.name}}</td>
                    <td>{{this.passed_count}}</td>
                    <td>{{this.blocked_count}}</td>
                    <td>{{this.untested_count}}</td>
                    <td>{{this.retest_count}}</td>
                    <td>{{this.failed_count}}</td>
                    <td>{{sumcounts passed_count blocked_count untested_count retest_count failed_count}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
<div class="row">
    <div class="myselection">
        <div class="two columns">
            <h5>Selected:</h5>
        </div>
        <div class="ten columns">
            <div id="selectedtestruns"></div>
        </div>
    </div>
</div>

