<!-- =========================== HEADER ========================== -->

<div class="row">

</div>

<!-- =========================== TITLE =========================== -->
<div class="row">
    <div class="twelve columns">
        <h1>Config</h1>
    </div>
</div>

<!-- =========================== BODY  =========================== -->
<!-- +++++++++++++++++++++++++++ ROW 1 +++++++++++++++++++++++++++ -->

<div class="row" id="projectheader">
    <div class="six columns">
        <h3>JIRA projects</h3>
    </div>
    <div class="six columns">
        <h4 id="projectselection">Selected: n/a</h4>
    </div>
</div>

<!-- +++++++++++++++++++++++++++ ROW 2 and 3 +++++++++++++++++++++++ -->

<div class="row" id="projectbody-expanded">
    <div class="one column">
        <div id="project-collapse">
            [ - ]
        </div>
    </div>
    <div class="eight columns">
        <table id="projecttable" class="u-full-width">
            <thead>
                <tr>
                    <th>TESTRAILID</th>
                    <th>JIRAID</th>
                    <th>JIRAKEY</th>
                    <th>NAME</th>
                </tr>
            </thead>
            <tbody>
                {{#each context}}
                <tr class="projectrow" id="{{this.jirakey}}" jiraname="{{this.jiraname}}" jiraid="{{this.jiraid}}"
                    testrailid="{{this.testrailid}}" testrailname="{{this.testrailname}}">
                    <td>{{this.testrailid}}</td>
                    <td>{{this.jiraid}}</td>
                    <td>{{this.jirakey}}</td>
                    <td>{{this.jiraname}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    <div class="one column textalign-middle">
        <button id="projectsubmit">Submit</button>
    </div> 
    <div class="two columns">
        &nbsp;
    </div>
</div>

<!-- +++++ -->

<div class="row" id="projectbody-collapsed">
    <div class="one column">
        <div id="project-expand">
            [ + ]
        </div>
    </div>
    <div class="two columns">
        <h6 class="hidden-msg">projects hidden</h6>
    </div>
    <div class="seven columns">
        <hr>
    </div>
     <div class="two columns">
        &nbsp;
    </div>
</div>

